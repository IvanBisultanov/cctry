{
  "printWidth": 140,
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "bracketSpacing": true,
  "singleQuote": true,
  "arrowParens": "avoid",
  "trailingComma": "all",
  "bracketSameLine": true,
  "requirePragma": false,
  "insertPragma": false,
  "embeddedLanguageFormatting": "auto",
  "proseWrap": "always",
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "css",
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrder": [
    "^@angular/(.*)$|^r",
    "^@cc/(.*)$",
    "^src/(.*)$",
    "^[./]"
  ],
  "importOrderParserPlugins": ["typescript", "classProperties", "[\"decorators\", { \"decoratorsBeforeExport\": true }]"],
  "overrides": [
    {
      "files": ["**/*.html"],
      "options": {
        "printWidth": 160,
        "parser": "angular"
      }
    },
    {
      "files": ["**/*.scss"],
      "options": {
        "printWidth": 160,
        "parser": "scss"
      }
    }
  ]
}
